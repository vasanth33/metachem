<odoo>
    <record id="view_company_form_report_images" model="ir.ui.view">
        <field name="name">res.company.report.images</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="after">
                <group >
                    <field name="fax" />
                    <field name="trn" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
