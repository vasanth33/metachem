<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action Definition -->
    <record id="action_report_metachem_invoice" model="ir.actions.report">
        <field name="name">MetaChem Tax Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">metachem.report_metachem_invoice_document</field>
        <field name="report_file">metachem.report_metachem_invoice_document</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="print_report_name">'MetaChem Invoice - %s' % (object.name)</field>
    </record>

    <!-- QWeb Report Document Template -->
    <template id="report_metachem_invoice_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page" style="padding: 25px; font-family: Arial, sans-serif;">
                    <!-- Invoice Title -->
                    <div style="background-color: #babcbf; color: white; padding: 10px; margin-bottom: 15px; text-align: center;">
                        <h3 style="margin: 0; font-size: 14pt; font-weight: bold;">TAX INVOICE</h3>
                    </div>

                    <!-- Customer Details and Invoice Info -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 15px;">
                        <tr>
                            <td style="width: 58%; vertical-align: top; padding-right: 10px;">
                                <div style="border: 2px solid #babcbf;">
                                    <div style="background-color: #babcbf; color: white; padding: 8px; font-size: 11pt; font-weight: bold;">
                                        CUSTOMER DETAILS
                                    </div>
                                    <div style="padding: 12px; font-size: 10pt; line-height: 1.6;">
                                        <strong style="font-size: 11pt;"><t t-out="doc.partner_id.name"/></strong><br/>
                                        <t t-out="doc.partner_id.street or ''"/><br/>
                                        <t t-if="doc.partner_id.street2"><t t-out="doc.partner_id.street2"/><br/></t>
                                        <t t-out="doc.partner_id.city or ''"/> - <t t-out="doc.partner_id.country_id.name or ''"/><br/>
                                        <t t-if="doc.partner_id.phone">Tel: <t t-out="doc.partner_id.phone"/><br/></t>
                                        <t t-if="doc.partner_id.vat">TRN: <t t-out="doc.partner_id.vat"/></t>
                                    </div>
                                </div>
                            </td>
                            <td style="width: 42%; vertical-align: top;">
                                <table style="width: 100%; border-collapse: collapse; border: 2px solid #1a5490;">
                                    <tr>
                                        <td style="background-color: #babcbf; font-weight: bold; width: 45%; padding: 8px; font-size: 9pt; border: 1px solid #1a5490;">INVOICE NO.</td>
                                        <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490;"><t t-out="doc.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #babcbf; font-weight: bold; padding: 8px; font-size: 9pt; border: 1px solid #1a5490;">INVOICE DATE</td>
                                        <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490;"><t t-out="doc.invoice_date" t-options='{"widget": "date"}'/></td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #babcbf; font-weight: bold; padding: 8px; font-size: 9pt; border: 1px solid #1a5490;">L.P.O. NO.</td>
                                        <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490;"><t t-out="doc.ref or ''"/></td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #babcbf; font-weight: bold; padding: 8px; font-size: 9pt; border: 1px solid #1a5490;">D.O. NO.</td>
                                        <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490;"></td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <!-- Invoice Line Items -->
                    <table style="width: 100%; border-collapse: collapse; margin-bottom: 15px; border: 2px solid #1a5490;">
                        <thead>
                            <tr style="background-color: #babcbf; color: white;">
                                <th style="width: 5%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">SL. NO.</th>
                                <th style="width: 32%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">DESCRIPTION</th>
                                <th style="width: 8%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">QUANTITY</th>
                                <th style="width: 7%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">UNIT</th>
                                <th style="width: 10%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">RATE</th>
                                <th style="width: 12%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">AMOUNT (AED)<br/>(EXCL VAT)</th>
                                <th style="width: 6%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">VAT%</th>
                                <th style="width: 10%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">TAX AMT</th>
                                <th style="width: 10%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: center; font-weight: bold;">TOTAL AMT (AED)<br/>(INCL VAT)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="line_index" t-value="1"/>
                            <tr t-foreach="doc.invoice_line_ids" t-as="line">
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: center;"><t t-out="line_index"/></td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490;"><t t-out="line.name"/></td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;"><t t-out="line.quantity" t-options='{"widget": "float", "precision": 2}'/></td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: center;"><t t-out="line.product_uom_id.name or 'Unit'"/></td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;"><t t-out="line.price_unit" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;"><t t-out="line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: center;">
                                    <t t-if="line.tax_ids">
                                        <t t-foreach="line.tax_ids" t-as="tax">
                                            <t t-out="'%.0f' % tax.amount"/>%
                                        </t>
                                    </t>
                                    <t t-else="">0%</t>
                                </td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;">
                                    <t t-out="line.price_total - line.price_subtotal" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                </td>
                                <td style="padding: 8px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;"><t t-out="line.price_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></td>
                                <t t-set="line_index" t-value="line_index + 1"/>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Totals Section -->
                    <table style="width: 100%; border-collapse: collapse;">
                        <tr>
                            <td style="width: 58%; vertical-align: top; padding-right: 10px;">
                                <div style="border: 2px solid #1a5490; padding: 12px; min-height: 85px;">
                                    <p style="margin: 0; font-size: 10pt;">
                                        <strong>AMOUNT IN WORDS (AED):</strong><br/>
                                        <span style="font-size: 10pt; margin-top: 5px; display: block;">
                                            <t t-set="amount_words" t-value="doc.currency_id.amount_to_text(doc.amount_total)"/>
                                            <t t-out="amount_words.title()"/>
                                        </span>
                                    </p>
                                </div>
                            </td>
                            <td style="width: 42%; vertical-align: top;">
                                <table style="width: 100%; border-collapse: collapse; border: 2px solid #1a5490;">
                                    <tr>
                                        <td style="background-color: #babcbf; font-weight: bold; width: 60%; padding: 10px; font-size: 9pt; border: 1px solid #1a5490;">AMOUNT (AED)<br/>(EXCL VAT)</td>
                                        <td style="padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;">
                                            <t t-out="doc.amount_untaxed" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #babcbf; font-weight: bold; padding: 10px; font-size: 9pt; border: 1px solid #1a5490;">VAT AMOUNT (AED)</td>
                                        <td style="padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;">
                                            <t t-out="doc.amount_tax" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr style="background-color: #babcbf; color: white;">
                                        <td style="font-weight: bold; padding: 10px; font-size: 9pt; border: 1px solid #1a5490;">TOTAL AMOUNT (AED)<br/>(INCL. VAT)</td>
                                        <td style="font-weight: bold; padding: 10px; font-size: 9pt; border: 1px solid #1a5490; text-align: right;">
                                            <t t-out="doc.amount_total" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>

                    <!-- Footer Section -->
                    <div style="margin-top: 25px; text-align: center;">
                        <p style="font-size: 10pt; font-style: italic; margin: 0;">
                            Thank you for your business!
                        </p>
                    </div>

                    <div style="page-break-after: always;"></div>
                </div>
            </t>
        </t>
    </template>
</odoo>