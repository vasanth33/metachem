<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_ledger_report_wizard_form" model="ir.ui.view">
        <field name="name">ledger.report.wizard.form</field>
        <field name="model">ledger.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Ledger Report">
                <group>
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                    </group>
                    <group>
                        <field name="customer_type" widget="radio" required="1"/>
                    </group>
                </group>
                <footer>
                    <button name="action_print_pdf" string="Print PDF" 
                            type="object" class="btn-primary"/>
                    <button name="action_print_excel" string="Print Excel" 
                            type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_ledger_report_wizard" model="ir.actions.act_window">
        <field name="name">Ledger Report</field>
        <field name="res_model">ledger.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_ledger_report_wizard"
              name="Ledger Report"
              parent="sale.menu_sale_report"
              action="action_ledger_report_wizard"
              sequence="10"/>
</odoo>